<h1>Cocktails#show</h1>

<strong><%= @cocktail.name %></strong>
<%= image_tag @cocktail.picture.url(:medium) %>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to 'Delete dose', dose, method: :delete, data: {confirm: "Are you positive that you want to delete this dose?"} %></li>
  <% end %>
</ul>

<%=link_to 'Add new dose', new_cocktail_dose_path(@cocktail) %>
<%=link_to 'Cocktails list', cocktails_path %>
